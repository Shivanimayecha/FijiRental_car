<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_action_info"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_star"
            android:src="@drawable/progress"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_15sdp"/>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Responce Rate"
            android:layout_toRightOf="@id/iv_star"
            android:textColor="@color/black"/>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:letterSpacing="0.02"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="All Star Hosts: 95%"
            android:layout_toRightOf="@id/iv_star"
            android:textColor="@color/black3"/>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:layout_below="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:letterSpacing="0.02"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="your responded to 95 out of 100 Requests"
            android:layout_toRightOf="@id/iv_star"
            android:textColor="@color/black3"/>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_star"
            android:letterSpacing="0.02"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur in the adipiscing elit,sed do eiusmood tempor does incididunt ut labore ealiqua."
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black3"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </RelativeLayout>

</LinearLayout>
