<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/_8sdp"
    android:paddingRight="@dimen/_8sdp"
    android:orientation="vertical">

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual transmission"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_5sdp"/>

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Some cars have manual transmissions. Are you able to drive a stick shift?"
        android:textColor="@color/black"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:id="@+id/et_tranmission"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            app:buttonTint="@color/green"
            android:id="@+id/yes_btn"
            android:text="Yes, I'm able to drive a stick shift"
            android:tag="YES"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:id="@+id/no_btn"
            app:buttonTint="@color/green"
            android:text="No, I'm not able to drive a stick shift"
            android:tag="NO"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/cancel"
            android:id="@+id/cancel_btn"
            android:textColor="@color/green"
            android:textAllCaps="true"/>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/apply"
            android:id="@+id/ok_btn"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/green"
            android:textAllCaps="true"/>

    </LinearLayout>





</LinearLayout>