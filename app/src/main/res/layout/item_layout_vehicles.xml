<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="2dp"
    android:id="@+id/ll_mains"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@color/white">


    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"
        >



        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:id="@+id/car_year"
                    android:textColor="#9B9A9A"
                    android:textSize="@dimen/_13sdp"/>

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMW M4"
                    android:id="@+id/car_model"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"/>

            </LinearLayout>

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:letterSpacing="0.02"
                android:id="@+id/car_number"
                android:text="6MBV309"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56 trip"
                    android:id="@+id/trip_count"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_13sdp"/>

                <ImageView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_action_rate"
                    android:layout_gravity="center_vertical" />

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:id="@+id/car_rating"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"/>



            </LinearLayout>
            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:letterSpacing="0.02"
                android:id="@+id/last_trip"
                android:text="Last trip: March 12 - March 14 "
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"/>




        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:paddingRight="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="0.3">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/car1"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                app:textAllCaps="true"
                android:id="@+id/listing_status"
                android:text="LISTED"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/rounded_green"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>


