<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F7"
    android:orientation="vertical"
    tools:context=".RulesRoadActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1919">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:text="Reserve The Car"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_white"
                        android:elevation="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_action_like" />

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.02"
                            android:text="Don't stress:you can cancel your trip for free, up to 24 hours before it starts."
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/round_white"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:weightSum="1">


                            <LinearLayout
                                android:id="@+id/ll_main"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:orientation="vertical"
                                android:paddingRight="@dimen/_10sdp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2019"
                                        android:textColor="@color/black2"
                                        android:textSize="@dimen/_14sdp" />

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:text="BMW M4"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_action_location_black" />

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:text="Los Angeles, CA"
                                        android:textColor="@color/black2"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/profile_image"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:src="@drawable/drive"
                                        app:civ_border_color="@color/white"
                                        app:civ_border_width="@dimen/_2sdp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingLeft="@dimen/_10sdp">


                                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Chris Johson"
                                            android:textColor="@color/black2"
                                            android:textSize="@dimen/_12sdp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_action_rate_green" />

                                            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="4.0"
                                                android:textColor="@color/black2"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:elevation="10dp"
                                    app:cardCornerRadius="5dp">

                                    <ImageView
                                        android:id="@+id/roundedImageView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/car1" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|bottom"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@drawable/round_white"
                                        android:orientation="horizontal"
                                        android:paddingHorizontal="@dimen/_5sdp">


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_action_rate" />


                                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="4.0"
                                            android:textColor="#000004" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>


                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/round_white"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_20sdp">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_tripstart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRIP START"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_12sdp" />

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="TRIP ENDS"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp" />


                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_triptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tripstart"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Thu, 30 Apr"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_12sdp" />

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tripstart"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Sun, 3 May"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_12sdp" />


                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tripstart"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="To"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_12sdp" />

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_triptime"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="10:00 AM"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp" />

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_triptime"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="10:00 AM"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/round_white"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:id="@+id/tv_tripprice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Trip price"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 25/day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Trip price"
                                    android:textColor="@color/grey_400"
                                    android:textSize="@dimen/_10sdp" />

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 25/day"
                                    android:textColor="@color/grey_400"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal">

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Trip price"
                                        android:textColor="@color/black2"
                                        android:textSize="@dimen/_12sdp" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/ic_action_info" />

                                </LinearLayout>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 5/day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Total per day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 30/day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/round_white"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal">

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4 day trip"
                                        android:textColor="@color/black2"
                                        android:textSize="@dimen/_12sdp" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/ic_action_info" />


                                </LinearLayout>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 120/day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal">

                                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="600 total miles"
                                        android:textColor="@color/black2"
                                        android:textSize="@dimen/_12sdp" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/ic_action_info" />


                                </LinearLayout>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="Free"
                                    android:textAllCaps="true"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp"
                                android:weightSum="1">

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Total per day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />

                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="$ 120/day"
                                    android:textColor="@color/black2"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingHorizontal="@dimen/_35sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="visible">

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo code"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/_12sdp" />

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="ADD"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
            android:id="@+id/tv_continuereserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/green"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:paddingVertical="@dimen/_10sdp"
            android:text="continue to reserve"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>


</LinearLayout>