<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F9"
    tools:context=".AddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1919">

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/white_close" />

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="center_vertical"
            android:text="Airports"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                android:id="@+id/tv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text="DONE"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:elevation="2dp"
                        android:background="@color/white">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="San Francisco, CA"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:letterSpacing="0.02"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_12sdp"/>


                        <ImageView
                            android:id="@+id/iv_toggle1"
                            android:layout_width="@dimen/_30sdp"
                            android:scaleType="fitStart"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/toggle_on"/>



                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="San Francisco International Airport"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_below="@+id/tv_discount"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:letterSpacing="0.02"
                            android:textColor="@color/black3"
                            android:textSize="@dimen/_10sdp"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:layout_below="@+id/tv_address"
                            android:text="$30"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/green"
                            android:layout_marginTop="@dimen/_15sdp"/>


                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_toRightOf="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:layout_below="@+id/tv_address"
                            android:text=" delivery fee"
                            android:textColor="@color/black2"
                            android:layout_marginTop="@dimen/_15sdp"/>

                        <SeekBar
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_below="@+id/tv_price"
                            android:thumbTint="@color/green"
                            android:progressTint="@color/green"
                            android:layout_marginBottom="@dimen/_5sdp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="@dimen/_15sdp"
                        android:elevation="2dp"
                        android:background="@color/white">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_discount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oakland, CA"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:letterSpacing="0.02"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_12sdp"/>


                        <ImageView
                            android:id="@+id/iv_toggle2"
                            android:layout_width="@dimen/_30sdp"
                            android:scaleType="fitStart"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/toggle_on"/>



                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_address1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oakland International Airport"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_below="@+id/tv_discount1"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:letterSpacing="0.02"
                            android:textColor="@color/black3"
                            android:textSize="@dimen/_10sdp"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:id="@+id/tv_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:layout_below="@+id/tv_address1"
                            android:text="$30"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/green"
                            android:layout_marginTop="@dimen/_15sdp"/>


                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_toRightOf="@+id/tv_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:layout_below="@+id/tv_address1"
                            android:text=" delivery fee"
                            android:textColor="@color/black2"
                            android:layout_marginTop="@dimen/_15sdp"/>

                        <SeekBar
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_below="@+id/tv_price1"
                            android:thumbTint="@color/green"
                            android:progressTint="@color/green"
                            android:layout_marginBottom="@dimen/_5sdp"/>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:id="@+id/recyclerviewairport"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/toolbar"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/emptyView"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/extras"
                            />
                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:text="No Airport at near"/>
                    </LinearLayout>

                </LinearLayout>






        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/floating_action"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:translationZ="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:visibility="gone"
        android:background="@drawable/add_white"/>


</RelativeLayout>
