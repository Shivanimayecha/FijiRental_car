<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F7"
    android:layout_marginBottom="@dimen/_40sdp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"

                android:background="@drawable/drive"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Extrabold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_back"
                    android:layout_margin="@dimen/_15sdp"
                    android:text="Earn Upto $500 / month*"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_18sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_action_how_it_work"
                        />

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_back"
                        android:text="How it works"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"/>

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="We need more information for cars older than 1990.speciality cars will be subject to additonal review."
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"/>


                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_back"
                        android:text="Read more"
                        android:textColor="#F11B34"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"/>



                </LinearLayout>

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:id="@+id/tv_listing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:paddingVertical="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:text="Let's Get Started"
                    android:background="@color/green"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"/>


            </LinearLayout>


        </LinearLayout>



    </ScrollView>




</LinearLayout>

