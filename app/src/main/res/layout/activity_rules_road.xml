<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F7"
    tools:context=".RulesRoadActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" #F4F4F7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_action_back_black"
            android:layout_margin="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_margin="@dimen/_10sdp"
                android:text="Help"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_40sdp"
                android:orientation="vertical">



                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_back"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Rules of the road"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_14sdp"/>


             <!--   <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerview"
                    android:layout_marginTop="@dimen/_10sdp"/>-->
                 <LinearLayout
                     android:gravity="center_horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_weight=".5"
                         android:layout_height="@dimen/_110sdp"
                         android:background="@color/white"
                         android:layout_marginLeft="@dimen/_10sdp"
                         android:layout_marginRight="@dimen/_5sdp"
                         android:layout_marginTop="@dimen/_10sdp"
                         android:orientation="vertical">


                         <ImageView
                             android:id="@+id/image3"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="@dimen/_20sdp"
                             android:layout_width="@dimen/_30sdp"
                             android:layout_height="@dimen/_30sdp"
                             android:layout_marginHorizontal="@dimen/_15sdp"
                             android:src="@drawable/ic_action_return_on_time"/>

                         <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Return on time"
                             android:id="@+id/tv_name3"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:gravity="center_horizontal"
                             android:textColor="@color/black2"
                             android:textSize="@dimen/_10sdp"/>

                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_weight=".5"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:layout_marginRight="@dimen/_10sdp"
                         android:layout_height="@dimen/_110sdp"
                         android:background="@color/white"
                         android:layout_marginTop="@dimen/_10sdp"
                         android:orientation="vertical">


                         <ImageView
                             android:id="@+id/image2"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="@dimen/_20sdp"
                             android:layout_width="@dimen/_30sdp"
                             android:layout_height="@dimen/_30sdp"
                             android:layout_marginHorizontal="@dimen/_15sdp"
                             android:src="@drawable/ic_action_carry_your_licenece"/>

                         <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Carry your license during the trip"
                             android:id="@+id/tv_name2"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginHorizontal="@dimen/_15sdp"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:gravity="center_horizontal"
                             android:textColor="@color/black2"
                             android:textSize="@dimen/_10sdp"/>

                     </LinearLayout>

                 </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/image5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:src="@drawable/ic_action_no_smoking"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No smoking"
                            android:id="@+id/tv_name5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/image4"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:src="@drawable/ic_action_keep_the_car_tidy"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keep the car tidy"
                            android:id="@+id/tv_name4"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/image1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:src="@drawable/ic_action_100_miles_included"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 miles included"
                            android:id="@+id/tv_name1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/image6"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:src="@drawable/ic_action_refuel_gas"/>

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refuel with premium gas"
                            android:id="@+id/tv_name6"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>



        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
            android:id="@+id/tv_gotit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:layout_alignParentBottom="true"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:text="Got it!"
            android:textAllCaps="true"
            android:background="@color/green"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_30sdp"/>
    </RelativeLayout>


</LinearLayout>