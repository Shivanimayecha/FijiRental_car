<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    android:elevation="1dp"
    android:background="@color/white">

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
        android:id="@+id/tv_airportname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Jose, CA"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:letterSpacing="0.02"
        android:textColor="@color/black2"
        android:textSize="@dimen/_12sdp"/>


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/iv_toggle2"
        android:layout_width="@dimen/_30sdp"
        android:scaleType="fitStart"
        android:button="@drawable/checkbox_selection"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        />



    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
        android:id="@+id/tv_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mineta San jose International Airport"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/tv_airportname"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:letterSpacing="0.02"
        android:textColor="@color/black3"
        android:textSize="@dimen/_10sdp"/>

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@+id/tv_address1"

        android:text="Free"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/green"
        android:layout_marginTop="@dimen/_15sdp"/>

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
        android:layout_toRightOf="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/tv_price1"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@+id/tv_address1"
        android:text=" delivery fee"
        android:textColor="@color/black2"
        android:layout_marginTop="@dimen/_15sdp"/>

    <SeekBar
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/seek_price"
        android:layout_below="@+id/tv_price"
        android:max="120"
        android:thumbTint="@color/green"
        android:progressTint="@color/green"
        android:layout_marginBottom="@dimen/_5sdp"/>


</RelativeLayout>
