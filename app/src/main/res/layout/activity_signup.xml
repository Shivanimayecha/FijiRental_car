<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_signup_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_action_back" />

    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_toRightOf="@+id/iv_back"
        android:gravity="center_vertical"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:id="@+id/tv_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/first_name"
                android:textAllCaps="true"
                android:textColor="#B5B5B5"
                android:textSize="@dimen/_14sdp" />

            <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                android:id="@+id/et_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_firstname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_firstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/et_fname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/white" />

            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:id="@+id/tv_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_firstname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/last_name"
                android:textAllCaps="true"
                android:textColor="#B5B5B5"
                android:textSize="@dimen/_14sdp" />


            <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                android:id="@+id/et_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="@string/last_name"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/et_lname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/white" />


            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_lastname"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="#B5B5B5"
                android:textSize="@dimen/_14sdp" />

            <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_email"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/et_email"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/white" />


            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Regular
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_email"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/password"
                android:textAllCaps="true"
                android:textColor="#B5B5B5"
                android:textSize="@dimen/_14sdp" />


            <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_password"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/et_password"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/white" />


            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_password"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/phone"
                android:textAllCaps="true"
                android:textColor="#B5B5B5"
                android:textSize="@dimen/_14sdp" />


            <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_phone"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="@string/phone"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/et_phone"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/address_consumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/view_phone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_layout"
                    android:orientation="vertical">

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_password"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:text="@string/city"
                        android:textAllCaps="true"
                        android:textColor="#B5B5B5"
                        android:textSize="@dimen/_14sdp" />


                    <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:background="@color/white" />

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:text="@string/Suburb"
                        android:textAllCaps="true"
                        android:textColor="#B5B5B5"
                        android:textSize="@dimen/_14sdp" />


                    <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                        android:id="@+id/suburb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/Suburb"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:background="@color/white" />

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:text="@string/home_address"
                        android:textAllCaps="true"
                        android:textColor="#B5B5B5"
                        android:textSize="@dimen/_14sdp" />


                    <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                        android:id="@+id/home_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:hint="Home address (Optional)"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/et_phone"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rental_license"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center_vertical"
                            android:text="@string/business_licence"
                            android:textAllCaps="false"
                            android:textColor="#B5B5B5"
                            android:textSize="@dimen/_14sdp" />


                        <LinearLayout
                            android:id="@+id/business_license_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_white"
                            android:orientation="vertical">

                            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                android:id="@+id/business_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Browse"
                                android:inputType="text"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/selected_business_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardPreventCornerOverlap="false">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/businessLicenscImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:id="@+id/business_license_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black3"
                                    android:textSize="@dimen/_11sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/close_business_lincse"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_action_cancel_black" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center_vertical"
                            android:text="@string/transport_licence"
                            android:textAllCaps="false"
                            android:textColor="#B5B5B5"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/transport_license_lay"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_white"
                            android:orientation="vertical">

                            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                android:id="@+id/transport_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Browse"
                                android:inputType="text"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/selected_transport_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardPreventCornerOverlap="false">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/transportLicenscImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:id="@+id/transport_license_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black3"
                                    android:textSize="@dimen/_11sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/close_transport_license"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_action_cancel_black" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_consumer"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/rounded_green"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/Sign_Up"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                android:id="@+id/tv_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity='center'
                android:text="Continue with"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_continue"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="1">


                <LinearLayout
                    android:id="@+id/ll_facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_facebook"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebookLoginButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight=".5"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_action_fb" />


                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:id="@+id/tv_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_back"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:text="Facebook"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/google_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_google"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_action_google" />

                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                        android:id="@+id/tv_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_back"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:text="Google"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
