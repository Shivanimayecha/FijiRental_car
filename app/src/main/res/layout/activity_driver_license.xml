<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverLicenseActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1919">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="center_vertical"
            android:text="Personal information"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        //Driver's License Detail

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_continue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_40sdp"
                android:orientation="vertical">


                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/iv_back"
                    android:gravity="center_vertical"
                    android:text="Enter your Personal information"
                    android:textColor="@color/black4"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:id="@+id/driver_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ic_action_capture_photo" />


                    <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/iv_back"
                        android:gravity="center_vertical"
                        android:text="Select or capture a photo"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>


                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="First name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                     />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_midlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="Middle name (optional)"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                     />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="Last name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                   />

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Regular
                    android:id="@+id/et_countryname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="Country name"
                    android:padding="@dimen/_15sdp"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_regionname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="Suburb"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_cityname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="City name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_streetname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="Street name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <com.app.fijirentalcars.CustomViews.CustomEditText_Poppins_Regular
                    android:id="@+id/et_licensenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:hint="License number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_Regular
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signup"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_corner"
                    android:drawableRight="@drawable/ic_action_dropdown"
                    android:hint="Date of Birth"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:id="@+id/rental_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center_vertical"
                            android:text="@string/business_licence"
                            android:textAllCaps="false"
                            android:textColor="#B5B5B5"
                            android:textSize="@dimen/_14sdp" />


                        <LinearLayout
                            android:id="@+id/business_license_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_white"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:elevation="@dimen/_5sdp"
                            android:orientation="vertical">

                            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                android:id="@+id/business_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:inputType="text"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Browse"
                                android:textAllCaps="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/selected_business_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardPreventCornerOverlap="false">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/businessLicenscImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:id="@+id/business_license_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black3"
                                    android:textSize="@dimen/_11sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/close_business_lincse"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_action_cancel_black" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center_vertical"
                            android:text="@string/transport_licence"
                            android:textAllCaps="false"
                            android:textColor="#B5B5B5"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:id="@+id/transport_license_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_white"
                            android:elevation="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="vertical">

                            <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                android:id="@+id/transport_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:inputType="text"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Browse"
                                android:textAllCaps="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/selected_transport_license"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardPreventCornerOverlap="false">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/transportLicenscImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>


                                <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
                                    android:id="@+id/transport_license_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textColor="@color/black3"
                                    android:textSize="@dimen/_11sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/close_transport_license"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_action_cancel_black" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <com.app.fijirentalcars.CustomViews.CustomTextView_Poppins_SemiBold
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/state_selection"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Continue"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>


</LinearLayout>